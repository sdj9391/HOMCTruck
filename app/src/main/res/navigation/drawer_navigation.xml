<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@id/nav_home"
        android:name="com.homc.homctruck.views.fragments.HomeFragment"
        android:label="@string/menu_home" />
    <fragment
        android:id="@id/nav_gallery"
        android:name="com.homc.homctruck.views.fragments.GalleryFragment"
        android:label="@string/menu_gallery" />
    <fragment
        android:id="@id/nav_send"
        android:name="com.homc.homctruck.views.fragments.SendFragment"
        android:label="@string/menu_send" />
    <fragment
        android:id="@id/nav_share"
        android:name="com.homc.homctruck.views.fragments.ShareFragment"
        android:label="@string/menu_share">
        <action
            android:id="@+id/action_nav_share_to_nav_details"
            app:destination="@id/nav_details" />
    </fragment>
    <fragment
        android:id="@id/nav_slideshow"
        android:name="com.homc.homctruck.views.fragments.SlideshowFragment"
        android:label="@string/menu_slideshow" />
    <fragment
        android:id="@id/nav_tools"
        android:name="com.homc.homctruck.views.fragments.ToolsFragment"
        android:label="@string/menu_tools" />
    <fragment
        android:id="@+id/nav_details"
        android:name="com.homc.homctruck.views.fragments.DetailsFragment"
        android:label="@string/menu_details" />
</navigation>