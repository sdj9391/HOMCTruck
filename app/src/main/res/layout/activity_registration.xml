<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/toolbar"
        layout="@layout/item_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/msg_truck_registration"
        android:textColor="@color/title_text"
        android:textSize="@dimen/normal_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/truckNumberView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white"
        android:padding="12dp"
        android:textColor="@color/title_text"
        android:textSize="@dimen/normal_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTextView"
        android:text="@string/label_truck_number" />

    <TextView
        android:id="@+id/truckNumberTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white"
        android:padding="12dp"
        android:textColor="@color/title_text"
        android:textSize="@dimen/normal_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/truckNumberView"
        app:layout_constraintTop_toBottomOf="@+id/infoTextView"
        tools:text="MH00AB0000" />

    <TextView
        android:id="@+id/registrationPeriodText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white"
        android:padding="12dp"
        android:textColor="@color/title_text"
        android:textSize="@dimen/normal_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/truckNumberView"
        android:text="@string/label_registration_period" />

    <TextView
        android:id="@+id/registrationPeriodTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/white"
        android:padding="12dp"
        android:textColor="@color/title_text"
        android:textSize="@dimen/normal_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/registrationPeriodText"
        app:layout_constraintTop_toBottomOf="@+id/truckNumberView"
        tools:text="1 Year" />

    <Button
        android:id="@+id/payButton"
        android:layout_width="0dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="12dp"
        app:icon="@drawable/ic_upi_icon"
        app:iconTint="@null"
        app:iconPadding="12dp"
        tools:text="Pay 2500.00 â‚¹"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>